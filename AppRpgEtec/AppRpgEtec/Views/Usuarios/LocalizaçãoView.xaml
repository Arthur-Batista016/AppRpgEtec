<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Usuarios.LocalizaçãoView"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             Title="LocalizaçãoView">

    <Grid>
        <HorizontalStackLayout Grid.Row="0" Padding="100">
            <Entry Placeholder="cep"/>
            <Button Text="procurar" Command="{Binding GetEnderecoCommand}"/>
        </HorizontalStackLayout>
    
    
    
    
    <maps:Map x:Name="mapa" ItemsSource="{Binding MeuMapa}"
              Grid.Row="1"
              Grid.RowSpan="2"
              MapType="Hybrid" IsShowingUser="True" IsZoomEnabled="True" IsTrafficEnabled="True">
        <maps:Map.ItemTemplate>
            <DataTemplate>
                <maps:Pin Location="{Binding Location}"
                          Address="{Binding Address}"
                          Label="{Binding Label}" />
            </DataTemplate>
        </maps:Map.ItemTemplate>
    </maps:Map>

    </Grid>

</ContentPage>